$(function(){
    // 监听用户滚动位置
    const debounce = () => {
        let timer = null
        return () => {
            if (timer) {
            clearTimeout(timer);
            }
            timer = setTimeout(() => {
            localStorage.setItem('scrollHeight', window.pageYOffset || document.body.scrollTop || document.documentElement.scrollTop)
            }, 100)
        }
    }
    this.scrollFn = debounce()
    window.addEventListener('scroll', this.scrollFn)
});
// 滚动到上次访问位置
var scroll_back = {
    scrollToView:() => {
        let scrollHeight = localStorage.getItem('scrollHeight');
        if (scrollHeight) {
        setTimeout(() => {
            window.scrollTo({ top: scrollHeight, behavior: "smooth" });
            }, 50)
        }
    }
}